# Auto-generated with h2o

function _ifquery {
    _arguments \
        {-h,--help}'[this help]' \
        {-V,--version}'[copyright and version information]' \
        {-a,--all}'[process all interfaces marked "auto"]' \
        '--allow[ignore non-"allow-CLASS" interfaces]' \
        {-i,--interfaces}'[use FILE for interface definitions]':file:_files \
        '--state-dir[use DIR to store state information]':file:_files \
        {-X,--exclude}'[exclude interfaces from the list of interfaces to operate on by a PATTERN]' \
        {-v,--verbose}'[print out what would happen before doing it]' \
        '-o[set OPTION to VALUE as though it were in /etc/network/interfaces]' \
        '--no-mappings[don'\''t run any mappings]' \
        '--no-scripts[don'\''t run any hook scripts]' \
        '--no-loopback[don'\''t act specially on the loopback device]' \
        '--list[list all matching known interfaces]' \
        '--state[show the state of specified interfaces]' \
        "*: :_files"

}

_ifquery "$@"

