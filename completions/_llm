        {-h,--help}'[Show this message and exit.]' \
        ': :->cmd' \
        '*:: :->subcmd'

    case $state in
    (cmd)
        _commands
        ;;
    (subcmd)
        case $line[1] in
        (list)
            _llm_templates_list
            ;;

        (edit)
            _llm_templates_edit
            ;;

        (loaders)
            _llm_templates_loaders
            ;;

        (path)
            _llm_templates_path
            ;;

        (show)
            _llm_templates_show
            ;;

        esac
        ;;
     esac

}

function _llm_templates_list {
    _arguments \
        {-h,--help}'[Show this message and exit.]' \
        "*: :_files"

}

function _llm_templates_edit {
    _arguments \
        {-h,--help}'[Show this message and exit.]' \
        "*: :_files"

}

function _llm_templates_loaders {
    _arguments \
        {-h,--help}'[Show this message and exit.]' \
        "*: :_files"

}

function _llm_templates_path {
    _arguments \
        {-h,--help}'[Show this message and exit.]' \
        "*: :_files"

}

function _llm_templates_show {
    _arguments \
        {-h,--help}'[Show this message and exit.]' \
        "*: :_files"

}


function _llm_tools {
    local line state

    function _commands {
        local -a commands
        commands=(
            'Manage:tools that can be made available to LLMs'
            'list:List available tools that have been provided by plugins'
        )
        _describe 'command' commands
    }
 

    _arguments -C \
        {-h,--help}'[Show this message and exit.]' \
        ': :->cmd' \
        '*:: :->subcmd'

    case $state in
    (cmd)
        _commands
        ;;
    (subcmd)
        case $line[1] in
        (Manage)
            _llm_tools_Manage
            ;;

        (list)
            _llm_tools_list
            ;;

        esac
        ;;
     esac

}

function _llm_tools_Manage {
    _arguments \
        '--json[Output as JSON]' \
        '--functions[Python code block or file path defining functions to register as tools]' \
        {-h,--help}'[Show this message and exit.]' \
        "*: :_files"

}

function _llm_tools_list {
    _arguments \
        '--json[Output as JSON]' \
        '--functions[Python code block or file path defining functions to register as tools]' \
        {-h,--help}'[Show this message and exit.]' \
        "*: :_files"

}

function _llm_uninstall {
    _arguments \
        {-y,--yes}'[Don'\''t ask for confirmation]' \
        {-h,--help}'[Show this message and exit.]' \
        "*: :_files"

}

_llm "$@"

