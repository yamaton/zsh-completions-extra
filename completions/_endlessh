#compdef endlessh

# Auto-generated with h2o

function _endlessh {
    _arguments \
        '-4[Forces endless to use IPv4 addresses only.]' \
        '-6[Forces endless to use IPv6 addresses only.]' \
        '-d[Message milliseconds delay. Default: 10000]' \
        '-f[Set and load config file. By default endless looks for /etc/endlessh/config.]' \
        '-h[Print the help message and exit.]' \
        '-l[Maximum banner line length (3-255). Default: 32]' \
        '-m[Maximum number of clients. Default: 4096]' \
        '-p[Set the listening port. By default endless listens on port 2222.]' \
        '-s[Print diagnostics to syslog. By default endless prints them to standard output.]' \
        '-v[Print diagnostics. Can be specified up to twice to increase verbosity.]' \
        '-V[Causes endless to print version information and exit.]' \
        "*: :_files"

}

_endlessh "$@"

