    _arguments \
        {-U,--allow-unsigned}'[do not require a signed container image]' \
        {-D,--description}'[description for container image (library:// only)]' \
        {-h,--help}'[help for push]' \
        '--library[the library to push to]' \
        '--no-https[use http instead of https for docker:// oras:// and library://<hostname>/... URIs]' \
        "*: :_files"

}


function _apptainer_remote {
    local line state

    function _commands {
        local -a commands
        commands=(
            'add:Add a new apptainer remote endpoint'
            'add-keyserver:Add a keyserver (root user only)'
            'list:List all apptainer remote endpoints, keyservers, and OCI credentials that are configured'
            'login:Login to an Apptainer remote endpoint, an OCI/Docker registry or a keyserver using credentials'
            'logout:Log out from an Apptainer remote endpoint, an OCI/Docker registry or a keyserver'
            'remove:Remove an existing apptainer remote endpoint'
            'remove-keyserver:Remove a keyserver (root user only)'
            'status:Check the status of the apptainer services at an endpoint, and your authentication token'
            'use:Set an Apptainer remote endpoint to be actively used'
        )
        _describe 'command' commands
    }
 

    _arguments -C \
        {-c,--config}'[path to the file holding remote endpoint configurations (default "~/.apptainer/remote.yaml")]' \
        {-h,--help}'[help for remote]' \
        ': :->cmd' \
        '*:: :->subcmd'

    case $state in
    (cmd)
        _commands
        ;;
    (subcmd)
        case $line[1] in
        (add)
            _apptainer_remote_add
            ;;

        (add-keyserver)
            _apptainer_remote_add-keyserver
            ;;

        (list)
            _apptainer_remote_list
            ;;

        (login)
            _apptainer_remote_login
            ;;

        (logout)
            _apptainer_remote_logout
            ;;

        (remove)
            _apptainer_remote_remove
            ;;

        (remove-keyserver)
            _apptainer_remote_remove-keyserver
            ;;

        (status)
            _apptainer_remote_status
            ;;

        (use)
            _apptainer_remote_use
            ;;

        esac
        ;;
     esac

}


function _apptainer_remote_add {
    local line state

    function _commands {
        local -a commands
        commands=(
            'apptainer:remote add \[add options...\] <remote_name> <remote_URI>'
        )
        _describe 'command' commands
    }
 

    _arguments -C \
        {-g,--global}'[edit the list of globally configured remote endpoints]' \
        {-h,--help}'[help for add]' \
        {-i,--insecure}'[allow connection to an insecure http remote.]' \
        '--no-login[skip automatic login step]' \
        '--tokenfile[path to the file holding auth token for login (remote endpoints only)]' \
        ': :->cmd' \
        '*:: :->subcmd'

    case $state in
    (cmd)
        _commands
        ;;
    (subcmd)
        case $line[1] in
        (apptainer)
            _apptainer_remote_add_apptainer
            ;;

        esac
        ;;
     esac

}

function _apptainer_remote_add_apptainer {
    _arguments \
        "*: :_files"

}

